<h1>Burger Builder</h1>


<ul>
  {{#each recipes}}
    {{#unless devour}}
      {{> recipes/burgers_db-block devour=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Eaten Burgers</h2>

<ul>
  {{#each recipes}}
    {{#if devour}}
      {{> recipes/burgers_db-block devour=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="ca">Burger Choice:</label>
    <input type="text" id="ca" name="name">
  </div>


  <button type="submit">Add Burger</button>
</form>
